rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read all user documents for community features
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth == null || request.auth.uid == userId || resource == null;
    }
    
    // Allow reading community stats
    match /stats/{document} {
      allow read: if true;
      allow write: if false; // Only server can write stats
    }
  }
}